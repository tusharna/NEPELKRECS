generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_DEV")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String
  refreshToken String? @unique  
}

model Players {
  id    Int     @id @default(autoincrement())
  Name    String
  Surname     String
  Country   String
  DOB   DateTime?
  Age   Int
  Specialism    String
  Batting   String
  Bowiling    String?
  Team    String?  
}